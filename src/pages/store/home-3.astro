---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import StoreEntries3 from "@/components/store/StoreEntries3.astro";
// Content
import { getCollection } from "astro:content";
const allProducts = await getCollection("store");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-8">
      <div class="overflow-hidden">
        <Text
          tag="h1"
          variant="textXL"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="dark:text-white text-base-900 text-balance"
        >
          Digital products for your business
        </Text>
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-12 gap-x-1 mt-4"
      >
        {allProducts.map((post) => <StoreEntries3 post={post} />)}
      </div>
    </Wrapper>
  </section>
</BaseLayout>
