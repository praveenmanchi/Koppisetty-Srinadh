---
// Assets
import { Image } from "astro:assets";
import Avatar from "@/images/banner.png";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import LogoCloud from "@/components/assets/LogoCloud.astro";
// Awards
const awards = [
  {
    url: "#_",
    name: "Srinadh Koppisetti",
    award: "Digital Experience Innovation Award",
    organization: "Goldman Sachs PWM",
    project: "Client Onboarding Platform (2023)",
  },
  {
    url: "#_",
    name: "Srinadh Koppisetti",
    award: "Design Excellence Shoutout",
    organization: "Walmart Business",
    project: "B2B Procurement Platform (2024)",
  },
];
// Experience
const experience = [
  {
    yearStart: "08/2024",
    yearEnd: "Present",
    role: "Senior UX/UI Interface Designer",
    company: "Goldman Sachs, New York",
  },
  {
    yearStart: "09/2020",
    yearEnd: "06/2023",
    role: "UX/UI Designer",
    company: "Walmart, Bangalore, India",
  },
  {
    yearStart: "05/2018",
    yearEnd: "08/2020",
    role: "UX Designer",
    company: "Accenture, Hyderabad, India",
  },
  {
    yearStart: "08/2023",
    yearEnd: "05/2025",
    role: "Master of Science — Information Systems",
    company: "Auburn University at Montgomery",
  },
  {
    yearStart: "03/2014",
    yearEnd: "05/2018",
    role: "Bachelor of Engineering — Mechanical Engineering",
    company: "Gandhi Institute of Technology and Management",
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-8 pb-12">
      <div class="max-w-xl overflow-hidden">
        <Text
          tag="h1"
          variant="textXL"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="dark:text-white text-base-900 text-balance"
        >
          I craft digital experiences that bridge the gap between user needs and business objectives, with a focus on data-driven design decisions and scalable solutions.
        </Text>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-2 items-start gap-8 mt-2">
        <Text
          tag="p"
          variant="textBase"
          class="mt-2 text-base-500 dark:text-base-300 lg:text-balance order-first lg:order-last"
        >
          I'm <strong>Srinadh Koppisetti</strong>, a Senior UX/UI Designer with 5+ years of experience creating intuitive digital experiences across enterprise and consumer products. I specialize in user research, design systems, and data-driven design that bridges user needs with business goals.
          <br />
          <br />
          <strong>My Expertise:</strong><br />
          • User Research & Strategy: Conducted 100+ usability tests and stakeholder interviews, improving task completion rates by 25%
          • Design Systems: Developed unified design systems across 15+ applications, saving 180 developer hours per sprint
          • Enterprise Platforms: Led UX redesigns reducing onboarding time by 30% and managing $2.4B+ in assets
          • Cross-functional Leadership: Collaborated across 4 global time zones with Product, Engineering, and Compliance teams
          <br />
          <br />
          <strong>Notable Achievements:</strong><br />
          • Reduced client onboarding time by 30% at Goldman Sachs (45 mins to 31 mins per client)
          • Improved cart abandonment by 26% and reorder frequency by 18% at Walmart Business
          • Achieved 98% WCAG accessibility compliance across multiple platforms
          • Cut design handoff time by 60% through scalable component libraries
          <br />
          <br />
          <strong>My Approach:</strong> I combine Design Thinking methodology with behavioral analytics to solve complex problems. I believe great design balances empathy, data-driven insights, and technical scalability while maintaining accessibility and inclusive design principles.
        </Text>

        <Image
          width={1000}
          height={2000}
          src={Avatar}
          alt="Srinadh Koppisetti - UX/UI Designer Portfolio"
          class="w-full aspect-square mt-2 object-cover object-right"
        />
      </div>
    </Wrapper>
  </section>
  
  
  <section class="overflow-hidden relative">
    <Wrapper class="py-12">
      <div class="overflow-hidden">
        <Text
          tag="h3"
          variant="textLG"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="dark:text-white text-base-900 text-balance"
        >
          Experience
        </Text>
      </div>
      <ul
        role="list"
        class="grid grid-cols-2 md:grid-cols-3 gap-y-8 mt-1 relative before:absolute after:absolute before:bg-black after:bg-base-200 dark:before:bg-base-50 dark:after:bg-base-50/10 before:top-0 before:left-0 before:h-px before:w-18 after:top-0 divide-base-200 dark:divide-base-900 after:right-0 after:left-20 after:h-px"
      >
        {
          experience.map((job) => (
            <li class=" items-baseline lg:grid-cols-4 py-2 ">
              <Text
                tag="h3"
                variant="textBase"
                class="text-base-900  dark:text-white"
              >
                {job.yearStart} - {job.yearEnd}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-400"
              >
                {job.role}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-500"
              >
                {job.company}
              </Text>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>
  <section>
    <Wrapper class="py-12">
      <div class="overflow-hidden">
        <Text
          tag="h3"
          variant="textLG"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="dark:text-white text-base-900 text-balance"
        >
          Awards &amp; honors
        </Text>
      </div>
      <ul
        role="list"
        class="flex flex-col gap-1 mt-1 relative before:absolute after:absolute before:bg-black after:bg-base-200 dark:before:bg-base-50 dark:after:bg-base-50/10 before:top-0 before:left-0 before:h-px before:w-18 after:top-0 divide-y last-of-type:border-b last-of-type:border-base-200 dark:last-of-type:border-base-900 divide-base-200 dark:divide-base-900 after:right-0 after:left-20 after:h-px"
      >
        {
          awards.map((award) => (
            <li class="grid grid-cols-2 md:grid-cols-4 items-baseline lg:grid-cols-4 py-2 relative">
              <a
                href={award.url}
                class="absolute inset-0 z-10"
                title={award.name}
                aria-label={award.name}
              />
              <Text
                tag="h3"
                variant="textBase"
                class="text-base-900  dark:text-white"
              >
                {award.name}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-400"
              >
                {award.award}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-500"
              >
                {award.organization}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-600"
              >
                {award.project}
              </Text>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>
</BaseLayout>