---
// Assets
import { Image } from "astro:assets";
import Avatar from "@/images/avatar.jpeg";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import LogoCloud from "@/components/assets/LogoCloud.astro";
// Awards
const awards = [
  {
    url: "#_",
    name: "Koppisetty Srinadh",
    award: "Automobile Workshop Participant",
    organization: "Renault Company",
    project: "Automobile Workshop",
  },
  {
    url: "#_",
    name: "Koppisetty Srinadh",
    award: "Member",
    organization: "Rotary Club of GITAM University",
    project: "University Chapter",
  },
];
// Experience
// Experience / Education & Projects (from resume)
const experience = [
  {
    yearStart: "2018",
    yearEnd: "2018",
    role: "Industrial Trainee — Compressor Designs",
    company: "BHEL, Hyderabad (2 months)",
  },
  {
    yearStart: "2018",
    yearEnd: "2018",
    role: "Industrial Trainee — Compressor Designs",
    company: "CIPET, Vijayawada (2 months)",
  },
  {
    yearStart: "2018",
    yearEnd: "2018",
    role: "Project Intern — Manufacturing of Cylinder Liners",
    company: "Kusalava Ltd, VSEZ Visakhapatnam",
  },
  {
    yearStart: "2014",
    yearEnd: "2018",
    role: "B.Tech in Mechanical Engineering — CGPA 6.78",
    company: "GITAM Institute of Technology, GITAM University",
  },
  {
    yearStart: "2012",
    yearEnd: "2014",
    role: "Intermediate (MPC) — 79.8%",
    company: "Sashi College, Velivennu",
  },
  {
    yearStart: "2012",
    yearEnd: "2012",
    role: "CBSE — CGPA 7.2",
    company: "C R Reddy School, Eluru",
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-8 pb-12">
      <div class="max-w-xl overflow-hidden">
        <Text
          tag="h1"
          variant="textXL"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="dark:text-white text-base-900 text-balance"
        >
          I craft digital experiences that bridge the gap between user needs and business objectives, with a focus on data-driven design decisions and scalable solutions.
        </Text>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-2 items-start gap-8 mt-2">
        <Text
          tag="p"
          variant="textBase"
          class="mt-2 text-base-500 dark:text-base-300 lg:text-balance order-first lg:order-last"
        >
          I'm <strong>Koppisetty Srinadh</strong>, a UX/UI Designer and Product Designer with 7+ years of experience creating impactful digital experiences. I specialize in end-to-end design for web, mobile, and enterprise platforms across AI/ML, fintech, healthcare, and SaaS industries.
          <br />
          <br />
          <strong>My Expertise:</strong><br />
          • User Research & Strategy: Conducted 200+ user interviews and usability tests, leading to 40% improvement in user satisfaction
          • Design Systems: Built scalable design systems used by 15+ product teams, reducing design-to-dev handoff time by 60%
          • Enterprise Platforms: Led UX for applications serving 10K+ users, generating $2M+ in weekly revenue
          • Cross-functional Leadership: Collaborated with engineering, product, and business teams in Agile environments
          <br />
          <br />
          <strong>Notable Achievements:</strong><br />
          • Increased mobile app engagement by 85% through user-centered redesign
          • Reduced e-commerce checkout abandonment by 45% via conversion optimization
          • Led design for AI-powered platforms that improved operational efficiency by 30%
          • Mentored 25+ designers and contributed to design community through workshops and articles
          <br />
          <br />
          <strong>My Approach:</strong> I combine Design Thinking methodology with data-driven insights to solve complex user problems. I believe great design balances user needs, business goals, and technical constraints while maintaining accessibility and inclusive design principles.
        </Text>

        <Image
          width={1000}
          height={2000}
          src={Avatar}
          alt="Koppisetty Srinadh - UX/UI Designer Portfolio"
          class="w-full aspect-square mt-2 object-cover object-right"
        />
      </div>
    </Wrapper>
  </section>
  <section>
    <Wrapper class="py-12">
      <div class="overflow-hidden">
        <Text
          tag="h3"
          variant="textLG"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="dark:text-white text-base-900 text-balance"
        >
          Awards &amp; honors
        </Text>
      </div>
      <ul
        role="list"
        class="flex flex-col gap-1 mt-1 relative before:absolute after:absolute before:bg-black after:bg-base-200 dark:before:bg-base-50 dark:after:bg-base-50/10 before:top-0 before:left-0 before:h-px before:w-18 after:top-0 divide-y last-of-type:border-b last-of-type:border-base-200 dark:last-of-type:border-base-900 divide-base-200 dark:divide-base-900 after:right-0 after:left-20 after:h-px"
      >
        {
          awards.map((award) => (
            <li class="grid grid-cols-2 md:grid-cols-4 items-baseline lg:grid-cols-4 py-2 relative">
              <a
                href={award.url}
                class="absolute inset-0 z-10"
                title={award.name}
                aria-label={award.name}
              />
              <Text
                tag="h3"
                variant="textBase"
                class="text-base-900  dark:text-white"
              >
                {award.name}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-400"
              >
                {award.award}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-500"
              >
                {award.organization}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-600"
              >
                {award.project}
              </Text>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>
  <LogoCloud />
  <section class="overflow-hidden relative">
    <Wrapper class="py-12">
      <div class="overflow-hidden">
        <Text
          tag="h3"
          variant="textLG"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="dark:text-white text-base-900 text-balance"
        >
          Experience
        </Text>
      </div>
      <ul
        role="list"
        class="grid grid-cols-2 md:grid-cols-3 gap-y-8 mt-1 relative before:absolute after:absolute before:bg-black after:bg-base-200 dark:before:bg-base-50 dark:after:bg-base-50/10 before:top-0 before:left-0 before:h-px before:w-18 after:top-0 divide-base-200 dark:divide-base-900 after:right-0 after:left-20 after:h-px"
      >
        {
          experience.map((job) => (
            <li class=" items-baseline lg:grid-cols-4 py-2 ">
              <Text
                tag="h3"
                variant="textBase"
                class="text-base-900  dark:text-white"
              >
                {job.yearStart} - {job.yearEnd}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-400"
              >
                {job.role}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-500 dark:text-base-500"
              >
                {job.company}
              </Text>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>
</BaseLayout>