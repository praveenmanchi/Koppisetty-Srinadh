---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
        <!-- Left: Contact Details -->
        <div class="max-w-sm">
          <div class="overflow-hidden">
            <Text
              tag="h1"
              variant="textXL"
              data-aos="fade-up"
              data-aos-duration="1000"
              class="dark:text-white text-base-900"
            >
              Get in touch
            </Text>
          </div>
          <div class="overflow-hidden">
            <Text
              tag="p"
              variant="textBase"
              data-aos="fade-up"
              data-aos-duration="1200"
              class="mt-2 text-base-500 dark:text-base-300"
            >
              Feel free to reach out if you want to chat about design, discuss a
              potential project, or explore new opportunities.
            </Text>
          </div>
          
          <!-- Contact Information -->
          <div class="flex flex-col gap-8 mt-8">
            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-center gap-4">
                <div class="flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 256 256" class="size-6 text-accent-500 dark:text-accent-300">
