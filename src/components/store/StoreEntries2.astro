---
// Assets
import { Image } from "astro:assets";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
const { title, url, description, image, price } = {
  url: "/store/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  image: Astro.props.post.data.image.url,
  description: Astro.props.post.data.description,
  price: Astro.props.post.data.price,
};
---

<div class="relative group">
  <a class="absolute inset-0 z-10" href={url} title={title}></a>
  <div class="relative">
    <Image
      src={image}
      alt={title}
      width={2000}
      height={1000}
      class="w-full aspect-square object-cover object-center"
    />

    <div class="mt-2">
      <div class="overflow-hidden">
        <Text
          tag="h3"
          variant="textBase"
          class="leading-6 ltext-base-900 dark:text-white flex items-center gap-2"
        >
          <span>${price}</span>
          â€”
          <span> {title}</span>
        </Text>
      </div>
      <div class="overflow-hidden">
        <Text
          tag="p"
          variant="textSM"
          class="text-base-500 mt-2 dark:text-base-400 line-clamp-2 lg:text-balance"
        >
          {description}
        </Text>
      </div>
    </div>
  </div>
</div>
