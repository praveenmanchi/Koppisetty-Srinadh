---
// Assets
import { Image } from "astro:assets";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
const { title, url, description, image, price } = {
  url: "/store/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  image: Astro.props.post.data.image.url,
  description: Astro.props.post.data.description,
  price: Astro.props.post.data.price,
};
---

<div class="relative group">
  <a class="absolute inset-0 z-10" href={url} title={title}></a>
  <div class="relative">
    <Image
      src={image}
      alt={title}
      width={2000}
      height={1000}
      class="w-full aspect-8/10 object-cover object-center"
    />
    <div
      class="lg:absolute lg:inset-0 lg:duration-300 lg:dark:group-hover:bg-base-950/90 lg:group-hover:bg-base-50/90"
    >
    </div>
    <div class="lg:absolute lg:inset-x-0 lg:p-8 lg:bottom-0 mt-2 lg:mt-0">
      <div class="overflow-hidden">
        <Text
          tag="h3"
          variant="textBase"
          class="leading-6 lg:group-hover:translate-y-0 duration-800 ease-in-out lg:translate-y-12 text-base-900 dark:text-white"
        >
          {title} - ${price}
        </Text>
      </div>
      <div class="overflow-hidden">
        <Text
          tag="p"
          variant="textSM"
          class="text-base-500 mt-2 dark:text-base-400 lg:ease-in-out lg:group-hover:translate-y-0 lg:duration-800 lg:translate-y-24 line-clamp-2"
        >
          {description}
        </Text>
      </div>
    </div>
  </div>
</div>
