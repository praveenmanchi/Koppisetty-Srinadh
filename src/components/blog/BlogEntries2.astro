---
// Assets
import { Image } from "astro:assets";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
const { url, title, description, pubDate, image, author } = {
  url: "/blog/posts/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  author: Astro.props.post.data.author,
  image: Astro.props.post.data.image.url,
  description: Astro.props.post.data.description,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<div class="relative group">
  <a class="absolute inset-0 z-10" href={url} title={title}></a>
  <div class="relative">
    <Image
      src={image}
      alt={title}
      width={1000}
      height={100}
      class="w-full aspect-8/9 object-cover object-center"
    />
     <div
    class="lg:absolute lg:inset-0 lg:duration-300 lg:dark:group-hover:bg-base-950/90 lg:group-hover:bg-base-50/90"
  >
  </div>
  <div class="lg:absolute lg:inset-x-0 lg:p-8 lg:bottom-0 mt-2 lg:mt-0">
      <div class="overflow-hidden">
        <Text
          tag="p"
          variant="textXS"
          class="dark:text-base-400 text-base-600 lg:group-hover:translate-y-0 lg:duration-600 lg:ease-in-out lg:-translate-y-32"
          >{author} â€” <timed date={pubDate}>{pubDate}</timed></Text
        >
        <Text
        tag="h3"
        variant="textLG"
        class="leading-6 mt-4 lg:mt-12 lg:group-hover:translate-y-0 duration-800 ease-in-out lg:translate-y-12 text-base-900 dark:text-white"
      >
        {title}
      </Text>
      </div>
      <div class="overflow-hidden">
        <Text
        tag="p"
        variant="textBase"
        class="text-base-500 mt-2 dark:text-base-400 lg:ease-in-out lg:group-hover:translate-y-0 lg:duration-800 lg:translate-y-24"
      >
        {description}
      </Text>
      </div>
    </div>
  </div>
</div>
