---
// Assets
import { Image } from "astro:assets";
import Avatar from "@/images/avatar.jpeg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section>
  <Wrapper variant="standard" class="py-8 lg:pb-24">
    <div class="overflow-hidden">
      <Image
        width={2000}
        height={1000}
        src={Avatar}
        alt="#_"
        data-aos="fade-up"
        data-aos-duration="1000"
        class="w-full h-96 object-cover object-right lg:object-[20%_20%]"
      />
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 items-start gap-8 mt-2">
      <div>
        <div class="overflow-hidden">
          <Text
            tag="h1"
            variant="textXL"
            data-aos="fade-up"
            data-aos-duration="1500"
            class="dark:text-white text-base-900 text-balance"
          >
            I'm Koppisetty Srinadh, a Product designer from USA.
          </Text>
        </div>
        <div class="overflow-hidden">
          <Text
            tag="p"
            variant="textBase"
            data-aos="fade-up"
            data-aos-duration="2000"
            class="mt-2 text-base-500 dark:text-base-300 lg:text-balance"
          >
            Creating innovative and scalable products with my expertise in
            software development, design systems, and cutting-edge technology.
          </Text>
        </div>
        <div class="overflow-hidden">
          <div class="flex items-center gap-3 mt-4" data-aos="fade-up" data-aos-duration="2200">
            <div class="w-3 h-3 rounded-full bg-blue-500 animate-pulse"></div>
            <Text
              tag="p"
              variant="textSM"
              class="font-medium text-blue-600 dark:text-blue-400"
            >
              Actively looking for opportunity
            </Text>
          </div>
        </div>
      </div>
      <div class="flex lg:ml-auto">
        <Link
          size="xs"
          variant="muted"
          href="/contact"
          title="your title"
          aria-label="your label"
          data-aos="fade-up"
          data-aos-duration="2000"
        >
          Let's talk
        </Link>
      </div>
    </div>
  </Wrapper>
</section>
